{
    "manifest_version": 3,
    "name": "Tradino",
    "description": "Le traducteur Humain/Dino n°1 du marché -- Icône CC BY-NC-SA 3.0 par https://www.deviantart.com/asuma17",
    "version": "1.0.0",
    "permissions": ["storage"],
    "icons": {
      "48": "data/logo-48.png",
      "96": "data/logo-96.png",
      "128": "data/logo-128.png"
    },
    "host_permissions": [
    	"<all_urls>"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content-script/index.js"]
      }
    ],
    "background": {
      "service_worker": "background/index.js",
      "type": "module"
    },
    "action": {
      "default_title": "Juste a title !",
      "default_popup": "popup/index.html"
    },
    "options_ui": {
      "page": "option-page/index.html",
      "open_in_tab": true
    }
}