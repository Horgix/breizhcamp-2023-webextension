{
    "manifest_version": 3,
    "name": "Base template",
    "description": "Foo",
    "version": "1.0.0",
    "permissions": [
      "contextMenus",
      "scripting",
      "clipboardWrite",
      "activeTab"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background/index.js",
      "type": "module"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content-script/index.js"]
        }
      ],
    "action": {
        "default_popup": "popup/index.html"
    },
    "content_security_policy": {}
}